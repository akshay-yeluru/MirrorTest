<project name="copy-and-zip" default="help" basedir=".">
    <description>
        Copy files into a directory so that they can be zipped for package and deployment
    </description>
	
	  <!-- set global properties for this build -->
  <property name="release" location="C:/Users/SRB-Build/Release/Development/SRBWarehouse"/>
  <property name="webroot" location="C:/Users/SRB-Build/Apache/WebRoot/htdocs"/>
  <property name="maven-repo" location="http://10.143.102.215:8081/artifactory/simple"/>
  
  
    <target name="build" depends="clean,copy,zip,writeProperties,publish" description="Copy and Package Zip File"/>

    <target name="clean">
        <delete includeemptydirs="true">
                <fileset dir="${release}" includes="**/*"/>
        </delete>
    </target>

    <target name="copy">
        <mkdir dir="${release}/log"/>
		<mkdir dir="${release}/output"/>
		<copy todir="${release}/KettleRepo">
                <fileset dir="KettleRepo"/>
        </copy>
        <copy todir="${release}/bin">
                <fileset dir="bin"/>
        </copy>
		<copy file="WarehouseSchemaBuilder\target\SRBWarehouseSchemaBuilder-0.0.1-SNAPSHOT.jar" todir="${release}/lib"/>
		<copy file="README.md" todir="${release}"/>
		<copy file="VERSION.txt" todir="${release}"/>
		<get src="${maven-repo}/ext-release-local/org/apache/logging/log4j/1.2.12/log4j-1.2.12.jar" dest="${release}/lib"/>
		<get src="${maven-repo}/ext-release-local/net/sourceforge/jtds/1.2/jtds-1.2.jar" dest="${release}/lib"/>
		<get src="${maven-repo}/ext-release-local/com/trifox/sql/vortex/2005.08.30/vortex-2005.08.30.jar" dest="${release}/lib"/>
		
    </target>

    <target name="zip">
        <zip destfile="${release}.zip"
       basedir="${release}"
  />
    </target>

    <target name="writeProperties">
        <propertyfile
            file="${release}/warehouse-package.properties">
                <entry  key="package-name" value="SRBWarehouse.zip"/>
                <entry  key="package-version" value="%build.number%"/>
        </propertyfile>
    </target>
	
    <target name="publish">
        <copy file="${release}.zip" todir="${webroot}"/>
        <copy file="${release}/warehouse-package.properties" todir="${webroot}"/>
    </target>
</project>