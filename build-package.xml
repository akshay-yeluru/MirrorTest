<project name="copy-and-zip" default="help" basedir=".">
    <description>
        Copy files into a directory so that they can be zipped for package and deployment
    </description>
	
	  <!-- set global properties for this build -->
  <property name="target" value="missing-target"/>
  <property name="release" location="F:/Release/${target}/SRBWarehouse"/>
    <!-- I tried to make the maven repo a property but it did not work correctly in the ant get task-->
  <!--property name="maven-repo" location="http://10.143.102.215:8081/artifactory/simple"/-->
  
  
    <target name="build" depends="clean,copy,writeProperties,zip" description="Copy and Package Zip File"/>

    <target name="clean">
		<mkdir dir="${release}"/>
        <delete includeemptydirs="true">
                <fileset dir="${release}" includes="**/*"/>
        </delete>
    </target>

    <target name="copy">
        <mkdir dir="${release}/log"/>
		<mkdir dir="${release}/output"/>
		<copy todir="${release}/KettleRepo">
                <fileset dir="KettleRepo"/>
        </copy>
        <copy todir="${release}/bin">
                <fileset dir="bin"/>
        </copy>
		<copy file="WarehouseSchemaBuilder\target\SRBWarehouseSchemaBuilder-0.0.1-SNAPSHOT.jar" todir="${release}/lib"/>
		<copy file="README.md" todir="${release}"/>
		<copy file="VERSION.txt" todir="${release}"/>
		<get src="http://erp.maven.srb-es.com:8081/artifactory/simple/ext-release-local/org/apache/logging/log4j/1.2.12/log4j-1.2.12.jar" dest="${release}/lib"/>
		<get src="http://erp.maven.srb-es.com:8081/artifactory/simple/ext-release-local/net/sourceforge/jtds/1.2/jtds-1.2.jar" dest="${release}/lib"/>
		<get src="http://erp.maven.srb-es.com:8081/artifactory/ext-release-local/com/trifox/sql/vortex/1.1.0.36/vortex-1.1.0.36-140921.jar" dest="${release}/lib"/>
		<get src="http://erp.maven.srb-es.com:8081/artifactory/ext-release-local/com/trifox/sql/vortex/2005.08.30/vortex-2005.08.30.jar" dest="${release}/lib"/>
		<get src="http://erp.maven.srb-es.com:8081/artifactory/ext-release-local/yajsw/yajsw-stable/11.03/yajsw-stable-11.03.zip" dest="${release}/resources/pdi-carte-service"/>
		
    </target>

    <target name="zip">
        <zip destfile="${release}.zip" basedir="${release}"/>
    </target>

    <target name="writeProperties">
        <propertyfile file="${release}/warehouse-package.properties">
                <entry  key="package-name" value="SRBWarehouse.zip"/>
                <entry  key="package-version" value="${build.number}"/>
        </propertyfile>
    </target>
	
</project>